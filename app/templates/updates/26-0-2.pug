
extends ../includes/templates/updates_post.pug

block seo
  - var title = '26.0.2'
  - var description = '26.0.2'
  - var url = '26-0-2'
  - var keywords = 'Helperbird for Edge,Helperbird for Firefox,Opendyslexic for Chrome,OpenDyslexic,Text to speech,Speech to text, Dyslexia software,        Reader Mode for Google Chrome,Reader Mode for Edge,speech to text for chrome,Text to speech for chrome,  text reader, Immersive Reader, dyslexia fonts, Helperbird for Chrome, Accessibility & Dyslexia Software'

block content
  include ../includes/mixins/updates
  .col-12.text-center

    +updates_title("What's new in Helperbird 26.0.2")
    +updates_description("See whats new in Helperbird 26.0.2")

  .col-12.flex.flex-column.pad30.launchaco-builder-hoverable.padding_40.pad40.white-background
    div.paragraph_features
      +updates_paragraph_title("Added more Lexend fonts")
      +updates_paragraph("Based on feedback we have added all Lexend fonts.")
      +updates_image('Save notes from around the web.','/assets/images/updates/25-0-0/font.png')

    div.paragraph_features
      +updates_paragraph_title("Dyslexia ruler can now follow your mouse.")
      +updates_paragraph("We added a follow feature, meaning the dyslexia ruler can now follow your cursor as you read.")

    div.paragraph_features              
      +updates_paragraph_title("We redesigned Helperbird")
      +updates_paragraph("All features are now easier and quicker to use. Our new design, allows you to have more control to tailor Helperbird to your needs.")
    div.paragraph_features
      +updates_paragraph_title("Extract text from images")
      +updates_paragraph("With our OCR feature, extract text from images in seconds.")
    div.paragraph_features
      +updates_paragraph_title("Syllables and noun highlighter.")
      +updates_paragraph("Learn how to pronouce and speak out words with our highlighting feature.")
    div.paragraph_features
      +updates_paragraph_title("Export your notes to other platforms")
      +updates_paragraph("Export your notes, to word, Google docs and text files with a click.")
    div.paragraph_features
      +updates_paragraph_title("Dication now supports serveral more langues")
      +updates_paragraph("Export your notes, to word, Google docs and text files with a click.")
    div.paragraph_features
      +updates_paragraph_title("Five new natural voices.")
      +updates_paragraph_title("Added Learn more buttons.")
      +updates_paragraph("Added learn more buttons across all features. So you can see how it works, see it in action and discover tips.")
    div.paragraph_features
      +updates_paragraph_title("Word spacing is now Free!")
      +updates_paragraph("We listend, word spacing is now free to everyone. Hope you enjoy.")
