block seo
  - var title = '30.3.0'
  - var description = '30.3.0'
  - var url = '30-3-0'
  - var keywords = 'Helperbird for Edge,Helperbird for Firefox,Opendyslexic for Chrome,OpenDyslexic,Text to speech,Speech to text, Dyslexia software,        Reader Mode for Google Chrome,Reader Mode for Edge,speech to text for chrome,Text to speech for chrome,  text reader, Immersive Reader, dyslexia fonts, Helperbird for Chrome, Accessibility & Dyslexia Software'

block content
  include ../includes/mixins/updates
  .col-12.text-center

    +updates_title("Welcome to the second Spooky Month update!  🎃🦇")
    +updates_description("The spooky month continues with our latest Helperbird update with exciting and non-spooky new features and changes.")

  .col-12.flex.flex-column.pad30.launchaco-builder-hoverable.padding_40.pad40.white-background
    div.paragraph_features

    div.paragraph_features
      +updates_paragraph_title("Font sizes")
      +updates_paragraph('You can now change the Font sizes on any webpage.')


    div.paragraph_features
      +updates_paragraph_title("White labeling")
      +updates_paragraph('Businesses and Government websites can now use the white labelling feature to replace the Helperbird logo/branding with their own. Please contact us to discuss white labelling for your company.')
  

    div.paragraph_features
      +updates_paragraph_title("IMPROVED FEATURES")
      +updates_paragraph('🗣️  Changed the “Enable” wording to “On/Off” when toggling features on or off in Helperbird to make things clearer to understand.')
      +updates_paragraph('🎨  You now have the ability to delete all settings and reset Helperbird back to it’s default settings easily by going to your ')
      +updates_paragraph('💻  Managing your account’s billing and subscription info is now easier through our manage page.')
      +updates_paragraph('📓  The Annotations and Read It Later features have been updated and redesigned.')
      +updates_paragraph('✅  The slider design when customizing certain features has been updated to be easier to read the settings youre selecting.')
      +updates_paragraph('📌  The Pinned Features and Templates have been moved towards the bottom of the features list.')
      +updates_paragraph('Bookmark is now called Read it later.')
      +updates_paragraph('And thats all she wrote for this version of Helperbird. Hope you enjoy the updates and have a spoooooky good time!')

