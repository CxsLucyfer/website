extends ../includes/templates/features/post.pug

block seo
    - var title = 'Analyze text and webpages quickly'
    - var description = 'Quickly find the amount of character, letters and break downs of all sentences on a webpage.'
    - var url = 'analyze'
    - var keywords = 'Adjust letters and words with Helperbird, Adjust letters and words, Adjust letters and words, Helperbird for Edge,Helperbird for Firefox,Opendyslexic for Chrome,OpenDyslexic,Text to speech,Speech to text, Dyslexia software,        Reader Mode for Google Chrome,Reader Mode for Edge,speech to text for chrome,Text to speech for chrome,  text reader, Immersive Reader, dyslexia fonts, Helperbird for Chrome, Accessibility & Dyslexia Software'

block content
    include ../includes/mixins/features
    .flex.flex-column.col-6.mobile-col-12.center-vertical.mobile-text-center.mb40


        +features_title("Analyze text and webpages quickly",'Content features')
        +features_description("In two clicks, find the amount of letters, characters and more on any website.")
        +download_button()
    .col-6.flex.flex-column.text-center.mobile-col-12
        +video_showoff('aXXRSenvTTg')

block features
    include ../includes/mixins/features
    +section('About',['In two clicks, find the amount of letters, characters and more on any website.'])

    +section('Features',[' Find the amount of characters in the selected text.','Find the amount of words in the selected text.'])
    +upsell('Pro feature','For more information on Helperbird Pro version click the button below.','See pricing')


