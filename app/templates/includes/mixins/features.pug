mixin features_title(text)
    h1.heading.primary-color.launchaco-builder-hoverable= text

mixin features_description(text)
    h3.paragraph.secondary-color.mt30.launchaco-builder-hoverable.index_sub_text= text

mixin download_button()
    .mt40
        a.try_it_now.button.pink.mobile-text-center.mt10.launchaco-builder-hoverable.mr10.mobile-text-center.accent-bg.fill-white.primary-color.cta-button(data-target='#downloadModal', data-toggle='modal')
            span Get Helperbird for Free
        a.try_it_now.button.mobile-text-center.mt10.launchaco-builder-hoverable.white-text.cta-small-text(href='https://www.youtube.com/watch?v=aXXRSenvTTg', target='_blank', rel='noopener', alt='Watch Helperbird video')
            span Watch it in action


mixin  watch_it_in_action(video = 'aXXRSenvTTg' )

  .section.lightblue-white.mb80
    .container-lrg
      .col-12
        h4.heading-sml.primary-color.launchaco-builder-hoverable.why_us.mb40 Watch it in action
    .container-lrg.flex
      .flex.flex-column.col-12.text-center
        .launchaco-builder-hoverable
          .scroller_video_home.mb20
            .scroller_video_item_home_page
              .youtube_lazy_load(data-embed= video)
                .play-button.


mixin  video_showoff(video = 'aXXRSenvTTg' )


  .container-md.flex.catch.hide
    .flex.flex-column.col-12.text-center
      .scroller_video_home.mb20
        .scroller_video_item_home_page
          .youtube_lazy_load(data-embed= video)
            .play-button
            img(src='https://img.youtube.com/vi/aXXRSenvTTg/sddefault.jpg', alt='Helperbird support feature')

mixin  compare(before, after)
  .container-md.flex.slider-show
    .flex.flex-column.col-12.text-center
      .browser.mt40.launchaco-builder-hoverable
        .mask.mask__noimage
          .img-comp-container
            .img-comp-img
              img(src= after, loading='lazy', alt='Before Helperbird', width='760', height='441')
            .img-comp-img.img-comp-overlay
              img(src= before, loading='lazy', alt='After Helperbird', width='760', height='441')        

  .container-md.flex.catch.hide
    .flex.flex-column.col-12.text-center
      .scroller_video_home.mb20
        .scroller_video_item_home_page
          .youtube_lazy_load(data-embed='aXXRSenvTTg')
            .play-button
            img(src='https://img.youtube.com/vi/aXXRSenvTTg/sddefault.jpg', alt='Helperbird support feature')

                      

mixin  section(title, features)
  section.section.mb80
    .container-lrg
      .col-12
        h3.heading-sml.primary-color.launchaco-builder-hoverable(style='color:#000')= title
        each val in features
            h3.paragraph.secondary-color.mt30.launchaco-builder-hoverable.index_sub_text= val


mixin  upsell(title, text, button)
  .section.lightblue-white.mb80
    .container-lrg
      .col-12
        h3.heading-sml.primary-color.launchaco-builder-hoverable(style='color:#000')= title
          
        h3.paragraph.secondary-color.mt30.launchaco-builder-hoverable.index_sub_text= text
        a.try_it_now.button.pink.mobile-text-center.mt10.launchaco-builder-hoverable.mr10.accent-bg.fill-white.primary-color.cta-button(href='/pricing')
            span= button




mixin features_paragraph_title(text)
    h3.heading-sml.primary-color.launchaco-builder-hoverable.black= text

mixin features_paragraph(text)
    p.paragraph_features= text

mixin features_button(text,link)
    p.paragraph_features= text
    a.button.mobile-text-center.mt10.launchaco-builder-hoverable.button-full-features.mobile-text-center.button-signup_two.text-center(href= link, target='_blank')
        span= text
        
mixin features_image(altText,imageUrl)
    img.launchaco-builder-hoverable.width_100.mb75(alt= altText, loading="lazy", src= imageUrl)


mixin home_page_features_list(text, link, description, group, imageUrl)

    li.features_list_item
        a.features_list_item_link(href= link , title= text)
            div.features_list_item_image.mb20(style="background: url('" + imageUrl + "') no-repeat center center; background-size: cover;")
            h4.features_list_item_title= text
            p.features_list_item_paragraph.truncate-overflow= description
        div.features_list_item_footer
            p.features_list_item_footer_left=  group
            
mixin buttons(altText,imageUrl)
    img.launchaco-builder-hoverable.width_100.mb75(alt= altText, loading="lazy", src= imageUrl)
