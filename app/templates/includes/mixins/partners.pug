mixin partners_title(feature_type,text)
  .text-lg.max-w-prose.mx-auto
    h1
      span.block.text-base.text-center.text-indigo-600.font-semibold.tracking-wide.uppercase
      span.mt-2.block.text-3xl.text-center.leading-8.font-extrabold.tracking-tight.text-gray-900(class='sm:text-4xl')= feature_type 
    p.mt-8.text-xl.text-gray-500.leading-8.text-center= text

mixin partners_description(text)
    h3.paragraph.paragraph_features.secondary-color.mt20.launchaco-builder-hoverable= text

mixin partners_paragraph_title(title,text)
    .text-lg.max-w-prose.mx-auto
        .mt-6.prose.prose-indigo.prose-lg.text-gray-500.mx-auto
            h2= title
            p= text


mixin partners_paragraph_title_smaller(title,text)
    .max-w-prose.mx-auto
        .mt-6.prose.prose-indigo.prose-lg.text-gray-500.mx-auto
            h4= title
            p= text


mixin partners_paragraph(text)
    .text-lg.max-w-prose.mx-auto
        .mt-6.prose.prose-indigo.prose-lg.text-gray-500.mx-auto
            p= text

mixin partners_button(text,link)
    a.button.mobile-text-center.mt10.launchaco-builder-hoverable.button-full-features.mobile-text-center.button-signup_two.text-center(href= link, target='_blank')
        span= text

mixin partners_image(altText,imageUrl)
    figure.m-8
        img.rounded-lg.mx-auto(alt= altText, loading="lazy", src= imageUrl, width="600")

mixin partners_video(videoUrl)

    .browser.mt40.launchaco-builder-hoverable
        video(width="680" height="402" autoplay="autoplay" muted="muted"  control="control" loop="loop" playsinline="playsinline")

            source(src= videoUrl  type="video/mp4")

mixin home_page_updateslist(text, link, description, imageUrl)

    .flex.flex-col.rounded-lg.shadow-lg.overflow-hidden
        .flex-shrink-0
            img.h-48.w-full.object-cover(src= imageUrl alt='Photo of Helperbirds user')
        .flex-1.bg-white.p-6.flex.flex-col.justify-between
            .flex-1
                h3.text-xl.font-semibold.text-gray-900.my-10= text
                p.text-sm.font-medium.text-indigo-600.my-10= description
                a.w-full.flex.items-center.justify-center.px-4.py-3.border.border-transparent.text-base.font-medium.rounded-md.text-white.bg-indigo-600(href= '/partners/' + link target="_blank"   class='hover:bg-indigo-700 md:py-4 md:text-lg md:px-10')
                    | Learn more



