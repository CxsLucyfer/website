block content
  section.red-white
    .col-12.flex.flex-column.pad30.mt40
      .mb20
        h3.heading.text-center What you can expect with Helperbird
        .container.mt40.force-flex

          .table-responsive
            table.table-striped.table.table-borderless
              thead
                tr
                  td.text-left(style="width:60%")
                    h4.heading-sml.primary-color.launchaco-builder-hoverable.why_us.press_logos_title Features
                  td.text-center
                    img(alt='Helperbird Logo', src='/assets/images/pwa/logo/full.png',width="60px")
                  td.text-center
                    img(alt='Helperbird Logo', src='https://d2e111jq13me73.cloudfront.net/sites/default/files/styles/product_image_aspect_switcher_170w/public/product-images/csm-app/snapandread-product-image.png?itok=dwFNPMNe',width="60px")

              tbody
                each val in table_points

                  tr
                    th.text-left(scope="col") #{val.feature}
                    td.text-center()
                      if val.helperbird
                        p.pricing_icon
                          i.fas.fa-check-circle
                      else
                        p.pricing_icon
                          i.fas.fa-times-circle
                    td.text-center()
                      if val.other
                        p.pricing_icon
                          i.fas.fa-check-circle
                      else
                        p.pricing_icon
                          i.fas.fa-times-circle

